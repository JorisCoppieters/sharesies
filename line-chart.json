{
    "$schema": "https://vega.github.io/schema/vega/v3.json",
    "axes": [
        {
            "orient": "bottom",
            "scale": "x"
        },
        {
            "orient": "left",
            "scale": "y"
        }
    ],
    "background": "white",
    "height": 200,
    "marks": [
        {
            "from": {
                "facet": {
                    "data": "table",
                    "groupby": "c",
                    "name": "series"
                }
            },
            "marks": [
                {
                    "encode": {
                        "enter": {
                            "stroke": {
                                "field": "c",
                                "scale": "color"
                            },
                            "strokeWidth": {
                                "value": 2
                            },
                            "x": {
                                "field": "x",
                                "scale": "x"
                            },
                            "y": {
                                "field": "y",
                                "scale": "y"
                            }
                        }
                    },
                    "from": {
                        "data": "series"
                    },
                    "type": "line"
                }
            ],
            "type": "group"
        }
    ],
    "padding": 5,
    "scales": [
        {
            "domain": {
                "data": "table",
                "field": "x"
            },
            "name": "x",
            "range": "width"
        },
        {
            "domain": {
                "data": "table",
                "field": "y"
            },
            "name": "y",
            "range": "height"
        },
        {
            "domain": {
                "data": "table",
                "field": "c"
            },
            "name": "color",
            "range": "category",
            "type": "ordinal"
        }
    ],
    "legends": [
        {
          "fill": "color",
          "encode": {
            "title": {
              "update": {
                "fontSize": {"value": 14}
              }
            },
            "labels": {
              "interactive": true,
              "update": {
                "fontSize": {"value": 12},
                "fill": {"value": "black"}
              },
              "hover": {
                "fill": {"value": "firebrick"}
              }
            },
            "symbols": {
              "update": {
                "stroke": {"value": "transparent"}
              }
            },
            "legend": {
              "update": {
                "stroke": {"value": "#ccc"},
                "strokeWidth": {"value": 1.5}
              }
            }
          }
        }
    ],
    "width": 500
}